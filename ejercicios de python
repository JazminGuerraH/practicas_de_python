# #Ejercicio1
 
from operator import truediv
from random import randint
from statistics import median
 
lista1 = []
for i in range(10):
    lista1.append(randint(1,10))
print(lista1)
for i in lista1:
    print(i, i**2, i**3)
print()
 
# #Ejercicio2
lista2 = []
for i in range(5):
    palabra = input("Agregue una palabra: ")
    lista2.append(palabra)
print(lista2)
lista2.reverse()
print(lista2)
print()
 
#Ejercicio3
lista3 = []
for i in range(5):
    nota = float(input("Escribe calificación: "))
    while(nota <0 or nota>10):
        print("pon otra calificación")
        nota = float(input("Escribe calificación: "))
    lista3.append(nota)
print(lista3)
print(f"La media es: {median(lista3)}, La maxima es: {max(lista3)}, La minima es: {min(lista3)}")
print()
 
#Ejercicio4
n = int(input("cuantos alumnos son: "))
diccionario = {}
for i in range(1,n + 1):
    nombre = input("Ingresa el nombre del alumno: ")
    for i in diccionario:
        while nombre in diccionario:
            print("Ya esta ese alumno en lista")           
    nota = int(input("cuantas notas tiene el alumno: "))
    lista_notas = []
    for i in range(1,nota + 1):
        calif = float(input("Ingresa calificación: "))
        if calif >= 0:
            lista_notas.append(calif)
            diccionario[nombre] = lista_notas
        else:
            print("calificación incorrecta")
print(diccionario)
print()

