from operator import truediv
from random import randint
from statistics import median

#Ejercicio1
lista1 = []
for i in range(10):
    lista1.append(randint(1,10))
print(lista1)
for i in lista1:
    print(i, i**2, i**3)
print()

#Ejercicio3
lista3 = []
for i in range(5):
    nota = float(input("Escribe calificaci칩n: "))
    while(nota <0 or nota>10):
        print("pon otra calificaci칩n")
        nota = float(input("Escribe calificaci칩n: "))
    lista3.append(nota)
print(lista3)
print(f"La media es: {median(lista3)}, La maxima es: {max(lista3)}, La minima es: {min(lista3)}")
print()
 
#Ejercicio2
lista2 = []
for i in range(5):
    palabra = input("Agregue una palabra: ")
    lista2.append(palabra)
print(lista2)
lista2.reverse()
print(lista2)
print()

#Ejercicio 4
diccionario = {}
alumnos = int(input("Cu치ntos alumnos son: "))
for i in range(1,alumnos + 1):
    nombre = input("ingresa el nombre del alumno: ")
    while nombre in diccionario:
        print("El usuario ya esta en la lista")
        nombre = input("ingresa el nombre del alumno: ")
    lista = []    
    nota = float(input("ingrese una nota: "))
    while nota >= 0:
        lista.append(nota)
        nota = float(input("ingrese una nota: "))
    diccionario[nombre] = lista
for i,j in diccionario.items():
    print(i)
    print(j)
    longitud = len(j)
    promedio = sum(j)/longitud
    print(i,"Su promedio es: ", promedio)
print()

#Ejercicio5
meses = ("Mes", "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Sept", "Oct", "Nov", "Dic")
sal = False
while not sal:
    num = int(input("ingresa un numero: "))
    if num == 0:
       break
    else:
        print(meses[num])
