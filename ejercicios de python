#Ejercicio5
meses = ("Mes", "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Sept", "Oct", "Nov", "Dic")
sal = False
while not sal:
    num = int(input("ingresa un numero: "))
    if num == 0:
       break
    else:
        print(meses[num])
